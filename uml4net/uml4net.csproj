<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
      <TargetFramework>netstandard2.0</TargetFramework>
      <Version>1.0.2</Version>
      <LangVersion>12.0</LangVersion>
      <Company>Starion Group S.A.</Company>
      <Copyright>Copyright © Starion Group S.A.</Copyright>
      <PackageId>uml4net</PackageId>
      <AssemblyTitle>uml4net</AssemblyTitle>
      <Title>uml4net</Title>
      <Description>A .NET implementation of the OMG UML v2.5.1 specification.</Description>
      <RequireLicenseAcceptance>true</RequireLicenseAcceptance>
      <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
      <IncludeSource>true</IncludeSource>
      <IncludeSymbols>true</IncludeSymbols>
      <PackageProjectUrl>https://uml4net.org</PackageProjectUrl>
      <RepositoryUrl>https://github.com/STARIONGROUP/uml4net.git</RepositoryUrl>
      <RepositoryType>Git</RepositoryType>
      <NeutralLanguage>en-US</NeutralLanguage>
      <SatelliteResourceLanguages>en-US</SatelliteResourceLanguages>
      <Authors>Sam Gerené; Nathanael Smiechowski</Authors>
      <PackageReadmeFile>README.md</PackageReadmeFile>
      <PackageIcon>icon.png</PackageIcon>
      <PackageTags>UML modeltopia</PackageTags>
      <PackageReleaseNotes>
          [Add] PackageIcon
      </PackageReleaseNotes>
  </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\" />
        <None Include="..\icon.png" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.0" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="AutoGenEnumeration\" />
      <Folder Include="AutoGenInterfaces\" />
      <Folder Include="AutoGenClasses\" />
    </ItemGroup>

</Project>
